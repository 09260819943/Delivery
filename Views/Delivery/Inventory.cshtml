<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delivery History</title>
    <style>
        /* General Styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .container {
            display: flex;
            height: 100vh;
        }

        /* Header Styles */
        .header {
            background-color: #ffcc80;
            color: #333;
            font-size: 22px;
            font-weight: bold;
            text-align: center;
            padding: 15px 0;
            border-bottom: 2px solid #e0a057;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 220px;
            background: linear-gradient(180deg, #fbe5d6, #f4b78e);
            height: 100%;
            box-shadow: 3px 0 5px rgba(0, 0, 0, 0.1);
            padding-top: 20px;
        }

            .sidebar a {
                display: block;
                text-decoration: none;
                color: #4b3621;
                font-weight: 600;
                font-size: 16px;
                padding: 12px 20px;
                margin: 8px 15px;
                border-radius: 8px;
                transition: background-color 0.3s, color 0.3s;
            }

                .sidebar a:hover {
                    background-color: #f4a261;
                    color: white;
                }

        /* Main Content Styles */
        .main-content {
            flex-grow: 1;
            padding: 30px;
            background-color: #fafafa;
        }

        h2 {
            font-size: 28px;
            color: #5c5c5c;
            border-bottom: 2px solid #f4a261;
            padding-bottom: 5px;
            margin-bottom: 20px;
        }

        /* Table Styles */
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

            table th, table td {
                padding: 12px;
                text-align: center;
                border: 1px solid #ddd;
                font-size: 14px;
            }

            table th {
                background-color: #ffe8d6;
                color: #4b3621;
                font-size: 16px;
            }

            table tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            table tr:hover {
                background-color: #f1f1f1;
            }

        /* Button Styles */
        .btn-primary {
            background-color: #4caf50;
            color: white;
            border: none;
            padding: 7px 15px;
            font-size: 14px;
            font-weight: bold;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #43a047;
            }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: white;
            padding: 25px;
            border-radius: 8px;
            text-align: center;
            width: 300px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

            .modal-content p {
                font-size: 16px;
                color: #333;
                margin-bottom: 20px;
            }

        .btn {
            padding: 10px 20px;
            font-size: 14px;
            border-radius: 5px;
            cursor: pointer;
            margin: 5px;
        }

            .btn.confirm {
                background-color: #4caf50;
                color: white;
            }

                .btn.confirm:hover {
                    background-color: #388e3c;
                }

            .btn.cancel {
                background-color: #f44336;
                color: white;
            }

                .btn.cancel:hover {
                    background-color: #d32f2f;
                }
    </style>

</head>
<body>
    <div class="header">Canduman Branch</div>
    <div class="main-content">
        <h1>Inventory</h1>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Supplier</th>
                        <th>DateAdded</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var inventory in Model)
                    {
                        <tr>
                            <td><img src="@inventory.ProductImage" style="width: 50px; height: 50px;"></td>
                            <td>@inventory.ProductName</td>
                            <td>@inventory.Quantity</td>
                            <td>@inventory.Supplier</td>
                            <td>@inventory.DateAdded</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
